<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical"
    tools:context=".complaint.view.ComplaintActivity">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="323dp"
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="我们将认真阅读您的投诉内容，仔细审查维修方的行为，妥善解决您的问题"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorGray">

            <EditText
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:id="@+id/editText_reason_complaint"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="0.5dp"
                android:background="@color/colorWhite"
                android:hint="投诉原因"
                android:maxLength="30"
                android:maxLines="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"

            android:background="@color/colorGray">

            <EditText
                android:id="@+id/editText_detail_complaint"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="0.5dp"
                android:background="@color/colorWhite"
                android:gravity="start"
                android:hint="事件详情"
                android:maxLength="30"
                android:maxLines="3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/button_commit_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:text="提交"

                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

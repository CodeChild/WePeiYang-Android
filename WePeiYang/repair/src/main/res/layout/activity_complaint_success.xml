<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical"
    tools:context=".message.view.CommitSuccessActivity">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:visibility="invisible"
            android:id="@+id/repair_complaint_fail_image"
            layout="@layout/cardview_success_onfail_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            android:visibility="invisible"
            android:id="@+id/repair_complaint_success_image"
            layout="@layout/cardview_success_onsuccess_complaint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/cardview_detail_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

    <include
        android:id="@+id/cardview_detail_onupdate"
        layout="@layout/cardview_detail_onupdate" />

    <include
        android:id="@+id/cardview_detail_onreceive"
        layout="@layout/cardview_detail_onreceive" />

    <include
        android:id="@+id/cardview_detail_onrepair_half"
        layout="@layout/cardview_detail_onrepair_half" />

    <include
        android:id="@+id/cardview_detail_onrepair_full"
        layout="@layout/cardview_detail_onrepair_full" />

    <include
        android:id="@+id/cardview_detail_onfinish"
        layout="@layout/cardview_detail_onfinish" />

</LinearLayout>
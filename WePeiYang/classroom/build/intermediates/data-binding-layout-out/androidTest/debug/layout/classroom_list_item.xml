<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                  

    

                 
                            
                                                                        

                                                                            
                                          
           

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/White"
        app:cardElevation="1dp" android:tag="layout/classroom_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:bind="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/classroomItem"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:clickable="true"
                    android:gravity="left"
                    android:tag="binding_1"              
                    android:textSize="25dip" />

                <Button
                    android:id="@+id/clickButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:tag="binding_2"                
                                                                                                                                             />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="3dp">

                <TextView
                    android:id="@+id/xiaoquItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_margin="3dp"
                    android:gravity="left"
                    android:tag="binding_3"           
                    android:textSize="15dip" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:tag="binding_4"         />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"


                >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:tag="binding_5"                      />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/image1"
                    android:scaleType="fitCenter"
                    android:src="@drawable/classroom_tag_fan"
                    android:tag="binding_6"                                                />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/image2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/classroomtag_electricityt"
                    android:tag="binding_7"                                                />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:layout_toRightOf="@id/image3"
                    android:src="@drawable/classroom_tag_heat"
                    android:tag="binding_8"                                                />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:layout_margin="3dp"
                    android:scaleType="fitCenter"
                    android:layout_toRightOf="@id/image4"
                    android:src="@drawable/classroom_tag_yinshuiji"
                    android:tag="binding_9"                                                />

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_toRightOf="@id/image5"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <!--android:layout_marginEnd="12dp"-->
                    <!--/>-->
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
         